<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_navmap"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="0dp"></com.google.android.gms.maps.MapView>

    <RelativeLayout
        android:id="@+id/reltvlout_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_navmap"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txt_navtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Current Location is..."
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_navtitle"
            android:layout_marginTop="5dp"
            android:text="Thung Luk Nok Properties in Kamphaeng Saen, Nakhon Pathom, Thailand" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reltvlout_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reltvlout_details"
        android:paddingTop="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action" />
    </RelativeLayout>
</RelativeLayout>